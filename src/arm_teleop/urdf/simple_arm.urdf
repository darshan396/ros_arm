<?xml version="1.0"?>
<robot name="colored_arm" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- ===== MATERIALS ===== -->
  <material name="blue">
    <color rgba="0.0 0.2 0.8 1.0"/>
  </material>
  <material name="gray">
    <color rgba="0.6 0.6 0.6 1.0"/>
  </material>
  <material name="red">
    <color rgba="0.9 0.1 0.1 1.0"/>
  </material>
  <material name="green">
    <color rgba="0.1 0.8 0.1 1.0"/>
  </material>
  <material name="yellow">
    <color rgba="0.9 0.8 0.1 1.0"/>
  </material>

  <!-- ===== BASE LINK ===== -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
  </link>

  <!-- ===== SHOULDER ===== -->
  <link name="shoulder_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.08"/>
      </geometry>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <material name="gray"/>
    </visual>
  </link>

  <joint name="base_to_shoulder" type="fixed">
    <parent link="base_link"/>
    <child link="shoulder_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

  <!-- ===== UPPER ARM ===== -->
  <link name="upper_arm_link">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.3"/>
      </geometry>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <material name="red"/>
    </visual>
  </link>

  <joint name="shoulder_to_upper_arm" type="revolute">
    <parent link="shoulder_link"/>
    <child link="upper_arm_link"/>
    <origin xyz="0 0 0.08" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1"/>
  </joint>

  <!-- ===== ELBOW ===== -->
  <link name="elbow_link">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.06"/>
      </geometry>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <material name="gray"/>
    </visual>
  </link>

  <joint name="upper_arm_to_elbow" type="fixed">
    <parent link="upper_arm_link"/>
    <child link="elbow_link"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
  </joint>

  <!-- ===== FOREARM ===== -->
  <link name="forearm_link">
    <visual>
      <geometry>
        <box size="0.04 0.04 0.25"/>
      </geometry>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <material name="green"/>
    </visual>
  </link>

  <joint name="elbow_to_forearm" type="revolute">
    <parent link="elbow_link"/>
    <child link="forearm_link"/>
    <origin xyz="0 0 0.06" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1"/>
  </joint>

  <!-- ===== GRIPPER ===== -->
  <link name="gripper_link">
    <visual>
      <geometry>
        <box size="0.06 0.04 0.04"/>
      </geometry>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <material name="yellow"/>
    </visual>
  </link>

  <joint name="forearm_to_gripper" type="fixed">
    <parent link="forearm_link"/>
    <child link="gripper_link"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
  </joint>

</robot>
