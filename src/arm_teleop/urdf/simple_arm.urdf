<?xml version="1.0"?>
<robot name="simple_arm">

  <!-- ========== COLORS ========== -->
  <material name="blue"><color rgba="0 0.4 0.8 1"/></material>
  <material name="red"><color rgba="0.8 0.1 0.1 1"/></material>
  <material name="green"><color rgba="0.1 0.8 0.1 1"/></material>
  <material name="gray"><color rgba="0.5 0.5 0.5 1"/></material>

  <!-- ========== BASE ========== -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.08"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <!-- ========== SHOULDER SERVO (rotation joint) ========== -->
  <link name="shoulder_servo">
    <visual>
      <geometry>
        <cylinder length="0.06" radius="0.04"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <joint name="base_to_shoulder_servo" type="fixed">
    <parent link="base_link"/>
    <child link="shoulder_servo"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

  <link name="upper_arm">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.25"/>
      </geometry>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <material name="red"/>
    </visual>
  </link>

  <joint name="shoulder_joint" type="revolute">
    <parent link="shoulder_servo"/>
    <child link="upper_arm"/>
    <origin xyz="0 0 0.03" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <!-- ========== ELBOW SERVO (rotation joint) ========== -->
  <link name="elbow_servo">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.035"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <joint name="upper_arm_to_elbow_servo" type="fixed">
    <parent link="upper_arm"/>
    <child link="elbow_servo"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
  </joint>

  <link name="forearm">
    <visual>
      <geometry>
        <box size="0.045 0.045 0.22"/>
      </geometry>
      <origin xyz="0 0 0.11" rpy="0 0 0"/>
      <material name="green"/>
    </visual>
  </link>

  <joint name="elbow_joint" type="revolute">
    <parent link="elbow_servo"/>
    <child link="forearm"/>
    <origin xyz="0 0 0.025" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0.0" upper="2.0" effort="10" velocity="1.0"/>
  </joint>

  <!-- ========== CLAW SERVO (fixed box) ========== -->
  <link name="claw_servo">
    <visual>
      <geometry>
        <box size="0.06 0.04 0.03"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <joint name="forearm_to_claw_servo" type="fixed">
    <parent link="forearm"/>
    <child link="claw_servo"/>
    <origin xyz="0 0 0.22" rpy="0 0 0"/>
  </joint>

  <!-- ========== CLAW (small movable hand) ========== -->
  <link name="claw">
    <visual>
      <geometry>
        <box size="0.15 0.02 0.02"/>
      </geometry>
      <material name="blue"/>
      <origin xyz="0.075 0 0"/>
    </visual>
  </link>

  <joint name="claw_joint" type="prismatic">
    <parent link="claw_servo"/>
    <child link="claw"/>
    <origin xyz="0 0 0.02" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0.0" upper="0.05" effort="5" velocity="0.5"/>
  </joint>

</robot>
