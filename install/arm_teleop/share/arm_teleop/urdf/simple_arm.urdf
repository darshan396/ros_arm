<?xml version="1.0"?>
<robot name="simple_arm">

  <material name="blue">
    <color rgba="0 0.4 0.8 1"/>
  </material>
  <material name="red">
    <color rgba="0.8 0.1 0.1 1"/>
  </material>
  <material name="green">
    <color rgba="0.1 0.8 0.1 1"/>
  </material>

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.1"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <!-- Shoulder Joint -->
  <joint name="shoulder_joint" type="revolute">
    <parent link="base_link"/>
    <child link="upper_arm"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="10" velocity="1.0"/>
  </joint>

  <!-- Upper Arm Link -->
  <link name="upper_arm">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.3"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <!-- Elbow Joint -->
  <joint name="elbow_joint" type="revolute">
    <parent link="upper_arm"/>
    <child link="forearm"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0.0" upper="2.62" effort="10" velocity="1.0"/>
  </joint>

  <!-- Forearm Link -->
  <link name="forearm">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.25"/>
      </geometry>
      <material name="green"/>
    </visual>
  </link>

  <!-- Claw Joint -->
  <joint name="claw_joint" type="prismatic">
    <parent link="forearm"/>
    <child link="claw"/>
    <origin xyz="0 0 0.125" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0.0" upper="0.1" effort="5" velocity="0.5"/>
  </joint>

  <!-- Claw Link -->
  <link name="claw">
    <visual>
      <geometry>
        <box size="0.15 0.02 0.02"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

</robot>